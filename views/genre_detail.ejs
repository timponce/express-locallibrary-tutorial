<!DOCTYPE html>
<html>
  <%- include('head'); -%>
  <body>
    <div class="container-fluid">
        <div class="row">
            <%- include('sidebar'); -%>
            <div class="col-sm-10">
              <h1>Genre: <%= genre.name %></h1>
              <div style="margin-left: 20px; margin-top:20px">
                <h4>Books</h4>
                <dl>
                    <% if (genre_books) { genre_books.forEach(book => { %>
                        <dt><a href=<%= book.url %>><%= book.title %></a></dt>
                        <dd><%= book.summary %></dd>
                    <% })} else { %>
                        <p>This genre has no books</p>
                    <% } %>
                </dl>
              </div>
              <p><a href=<%= genre.url+'/delete'%>>Delete Genre</a></p>
              <p><a href=<%= genre.url+'/update'%>>Update Genre</a></p>
            </div>
        </div>
    </div>
  </body>
</html>