<!DOCTYPE html>
<html>
  <%- include('head'); -%>
  <body>
    <div class="container-fluid">
        <div class="row">
            <%- include('sidebar'); -%>
            <div class="col-sm-10">
              <h1><%= title %></h1>
              <form method="POST" action="">
                  <div class="form-group">
                      <label for="first_name">First Name:</label>
                      <input id="first_name" class="form-control" type="text" placeholder="First name" name="first_name" required="true" value="<%= typeof author === 'undefined' ? '' : author.first_name %>" >
                      <label for="last_name">Last Name:</label>
                      <input id="family_name" class="form-control" type="text" placeholder="Last name (surname)" name="family_name" required="true" value=<%= typeof author === 'undefined' ? "" : author.family_name %> >
                  </div>
                  <div class="form-group">
                    <label for="date_of_birth">Date of birth:</label>
                    <input id="date_of_birth" class="form-control" type="date" name="date_of_birth" value=<%= typeof author === 'undefined' ? "" : author.date_of_birth %> >
                    <label for="date_of_death">Date of death:</label>
                    <input id="date_of_death" class="form-control" type="date" name="date_of_death" value=<%= typeof author === 'undefined' ? "" : author.date_of_death %> >
                  </div>
                  <button class="btn btn-primary" type="submit">Submit</button>
              </form>
              <% if (typeof errors !== 'undefined') { %>
                <ul>
                    <% for (const error of errors) { %>
                        <li><%= error.msg %></li>
                    <% } %>
                </ul>
              <% } %>
            </div>
        </div>
    </div>
  </body>
</html>