<!DOCTYPE html>
<html>
  <%- include('head'); -%>
  <body>
    <div class="container-fluid">
        <div class="row">
            <%- include('sidebar'); -%>
            <div class="col-sm-10">
              <h1><%= title %></h1>
              <form method="POST" action="">
                  <div class="form-group">
                      <label for="name">Genre:</label>
                      <input id="name" class="form-control" type="text" placeholder="Fantasy, Poetry, etc." name="name" value="<%= typeof genre === 'undefined' ? "" : genre.name %>" >
                  </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
              </form>
              <% if (typeof errors !== 'undefined') { %>
                <ul>
                    <% for (const error of errors) { %>
                        <li><%= error.msg %></li>
                    <% } %>
                </ul>
              <% } %>
            </div>
        </div>
    </div>
  </body>
</html>