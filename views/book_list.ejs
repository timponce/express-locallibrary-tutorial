<!DOCTYPE html>
<html>
  <%- include('head'); -%>
  <body>
    <div class="container-fluid">
        <div class="row">
            <%- include('sidebar'); -%>
            <div class="col-sm-10">
              <h1><%= title %></h1>
                <ul>
                    <% if (book_list) { book_list.forEach(book =>  { %>
                        <li><a href=<%= book.url %>><%= book.title %></a> <%= book.author.name %></li>
                    <% })} else { %>
                        <li>There are no books in this list</li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
  </body>
</html>
